{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node", "Multer", "Express"],
    "baseUrl": ".",
    "paths": {
      "@datn/ai": ["libs/ai/src/index.ts"],
      "@datn/logger": ["libs/logger/src/index.ts"],
      "@datn/prisma": ["libs/prisma/src/index.ts"],
      "@datn/rabbitmq": ["libs/rabbitmq/src/index.ts"],
      "@datn/redis": ["libs/redis/src/index.ts"],
      "@datn/s3": ["libs/s3/src/index.ts"],
      "@datn/shared": ["libs/shared/src/index.ts"],
      "@datn/storage": ["libs/storage/src/index.ts"],
      "@datn/tracing": ["libs/tracing/src/index.ts"],
      "@datn/weaviate": ["libs/weaviate/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
